<?xml version="1.0" encoding="UTF-8"?>
<web-app metadata-complete="false" version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
            <!--登入畫面的驗證碼-->
            <servlet>
                        <servlet-name>ImageCheckServlet</servlet-name>
                        <servlet-class>uuu.gtt.view.ImageCheckServlet</servlet-class>
                        <init-param>
                                    <!--預設是六碼，這邊改成四碼-->
                                    <param-name>length</param-name>
                                    <param-value>4</param-value>
                        </init-param>
                        <init-param>
                                    <param-name>font-style</param-name>
                                    <param-value>bold</param-value>
                        </init-param>
                        <load-on-startup>1</load-on-startup>
            </servlet>
            <servlet-mapping>
                        <servlet-name>ImageCheckServlet</servlet-name>
                        <url-pattern>/images/captcha.jpg</url-pattern>
                        <url-pattern>/images/check.jpg</url-pattern>
            </servlet-mapping>
    
            <!--註冊畫面的驗證碼-->
            <servlet>
                        <servlet-name>RegisterImageCheckServlet</servlet-name>
                        <servlet-class>uuu.gtt.view.ImageCheckServlet</servlet-class>
                        <load-on-startup>1</load-on-startup>
            </servlet>
            <servlet-mapping>
                        <servlet-name>RegisterImageCheckServlet</servlet-name>
                        <url-pattern>/images/register_captcha.jpg</url-pattern>
                        <url-pattern>/images/register_check.jpg</url-pattern>
            </servlet-mapping>
    
            <!--12章測試-->
            <servlet>
                        <servlet-name>mod12_index</servlet-name>
                        <jsp-file>/mod12/index.jsp</jsp-file>
                        <init-param>
                                    <param-name>welcome</param-name>
                                    <param-value>歡迎</param-value>
                        </init-param>
            </servlet>
            <servlet-mapping>
                        <servlet-name>mod12_index</servlet-name>
                        <url-pattern>/mod12/index.jsp</url-pattern>
            </servlet-mapping>
            
            
            <!--若30分鐘內沒有操作網頁就會登出-->
            <session-config>
                        <session-timeout>30</session-timeout>
            </session-config>
            
            
            <!--若找不到網頁就會轉到自製的404網頁-->
            <error-page>
                        <error-code>404</error-code>
                        <location>/WEB-INF/404.jsp</location>
            </error-page>
            <!--出現錯誤會轉到自製錯誤網頁-->
            <error-page>
                        <exception-type>java.lang.Exception</exception-type>
                        <location>/WEB-INF/error.jsp</location>
            </error-page>
            
                            <security-constraint>
                <display-name>All Pages</display-name>
                <web-resource-collection>
                    <web-resource-name>All Pages URL</web-resource-name>
                    <description/>
                    <url-pattern>/*</url-pattern>
                </web-resource-collection>
<!--                        <auth-constraint>
                    <description/>
                    <role-name>*</role-name>
                </auth-constraint>-->
                <user-data-constraint>
                    <description/>
                    <transport-guarantee>NONE</transport-guarantee>
                </user-data-constraint>
            </security-constraint>
            <security-constraint>
                <display-name>admin pages</display-name>
                <web-resource-collection>
                    <web-resource-name>admin pages</web-resource-name>
                    <description/>
                    <url-pattern>/admin/*</url-pattern>
                </web-resource-collection>
                <auth-constraint>
                    <description/>
                    <role-name>admins</role-name>
                </auth-constraint>
            </security-constraint>
            <login-config>
                <auth-method>BASIC</auth-method>
<!--                        <form-login-config>
                    <form-login-page>/login/admin_login.jsp</form-login-page>
                    <form-error-page>/login/admin_login_fail.jsp</form-error-page>
                </form-login-config>-->
            </login-config>
            <security-role>
                <description/>
                <role-name>admins</role-name>
            </security-role>
            <security-role>
                <description/>
                <role-name>users</role-name>
            </security-role>
    
</web-app>
