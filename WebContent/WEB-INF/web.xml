<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" metadata-complete="false" version="3.1">
  <servlet>
    <servlet-name>ImageCheckServlet</servlet-name>
    <servlet-class>uuu.gtt.view.ImageCheckServlet</servlet-class>
    <init-param>
      <param-name>length</param-name>
      <param-value>4</param-value>
    </init-param>
    <init-param>
      <param-name>font-style</param-name>
      <param-value>bold</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImageCheckServlet</servlet-name>
    <url-pattern>/images/captcha.jpg</url-pattern>
    <url-pattern>/images/check.jpg</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegisterImageCheckServlet</servlet-name>
    <servlet-class>uuu.gtt.view.ImageCheckServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterImageCheckServlet</servlet-name>
    <url-pattern>/images/register_captcha.jpg</url-pattern>
    <url-pattern>/images/register_check.jpg</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>mod12_index</servlet-name>
    <jsp-file>/mod12/index.jsp</jsp-file>
    <init-param>
      <param-name>welcome</param-name>
      <param-value>歡迎</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>mod12_index</servlet-name>
    <url-pattern>/mod12/index.jsp</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/404.jsp</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/WEB-INF/error.jsp</location>
  </error-page>
  <security-constraint>
    <display-name>All Pages</display-name>
    <web-resource-collection>
      <web-resource-name>All Pages URL</web-resource-name>
      <description></description>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <user-data-constraint>
      <description></description>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>
  <security-constraint>
    <display-name>admin pages</display-name>
    <web-resource-collection>
      <web-resource-name>admin pages</web-resource-name>
      <description></description>
      <url-pattern>/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description></description>
      <role-name>admins</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>BASIC</auth-method>
  </login-config>
  <security-role>
    <description></description>
    <role-name>admins</role-name>
  </security-role>
  <security-role>
    <description></description>
    <role-name>users</role-name>
  </security-role>
</web-app>